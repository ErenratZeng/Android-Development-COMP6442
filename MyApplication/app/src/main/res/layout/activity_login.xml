<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@color/Microsoftblue"
    tools:context="com.example.kangarun.activity.LoginActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KangaRun"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="35dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="100dp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        app:cardBackgroundColor="@color/Grey"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        app:cardCornerRadius="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="28dp"
            >

            <TextView
                android:id="@+id/textLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textSize="24sp"
                android:textStyle="bold"
                android:padding="15dp"
                android:layout_gravity="left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                />

            <EditText
            android:id="@+id/editTextUserEmail"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="User Email"
            android:inputType="text"
            android:padding="16dp"
            android:background="@drawable/textview_border"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/editTextPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="16dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/textview_border"
                app:layout_constraintTop_toBottomOf="@id/editTextUserEmail"
                app:layout_constraintBottom_toTopOf="@id/buttonLogin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/buttonLogin"
                android:layout_width="300dp"
                android:layout_height="65dp"
                android:text="Login"
                android:backgroundTint="@color/Button"
                android:padding="16dp"
                android:textSize="51px"
                app:layout_constraintTop_toBottomOf="@id/editTextPassword"
                app:layout_constraintBottom_toTopOf="@id/buttonCreateAccount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/buttonCreateAccount"
                android:layout_width="300dp"
                android:layout_height="65dp"
                android:text="Create an account"
                android:padding="16dp"
                android:backgroundTint="@color/Button"
                app:layout_constraintTop_toBottomOf="@id/buttonLogin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/buttonAutoLogin"
                android:layout_width="300dp"
                android:layout_height="65dp"
                android:backgroundTint="@color/Notice"
                android:text="Auto Login (Test ONLY)"
                app:layout_constraintTop_toBottomOf="@id/buttonCreateAccount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>
